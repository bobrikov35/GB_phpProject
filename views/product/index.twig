{% extends 'layouts/main.twig' %}

{% block style %}
    <link rel="stylesheet" href="/css/product.css?t={{ time }}">
    <link rel="stylesheet" href="/css/paginator.css?t={{ time }}">
{% endblock %}

{% block title %}Каталог{% endblock %}

{% block content %}

    <div class="title">
        <h2 class="title__text">Каталог товаров</h2>
    </div>

    {% if count > 0 %}

        <div class="content">

            {% for product in goods %}
                <div class="product">
                    <a class="product__image" href="/product/single/?id={{ product.id }}">
                        <img src="{{ product.image }}" alt="product">
                    </a>
                    <h3 class="product__name">{{ product.title }}</h3>
                    <p class="product__text">{{ product.description }}</p>
                    <p class="product__price">Цена: {{ product.price }}<i class="fa fa-rub"></i></p>
                    <a class="button product__link" href="/cart/add/?id={{ product.id }}">Добавить в корзину</a>
                </div>
            {% endfor %}

        </div>

        <div class="paginator">

            <a class="button paginator__button" href="/product/list/?page=1">
                <i class="fa fa-chevron-left"></i>
            </a>

            {% for page, link in pages.links %}
                {% if page != pages.current %}
                    <a class="paginator__link" href="{{ link }}">{{ page }}</a>
                {% else %}
                    <p class="paginator__link paginator__link_active">{{ page }}</p>
                {% endif %}
            {% endfor %}

            <a class="button paginator__button" href="/product/list/?page={{ pages.count }}">
                <i class="fa fa-chevron-right"></i>
            </a>

        </div>

    {% else %}

        <p class="message">Товары отсутствуют</p>

    {% endif %}

{% endblock %}
